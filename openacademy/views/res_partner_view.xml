<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    <record id="openacademy_res_partner_form" model="ir.ui.view">
        <field name="name">openacademy.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="50"/>
         <field name="arch" type="xml">
            <data>
                 <field name="title" position="before">
                     <field name="is_instructor"/>
                     <field name="teacher_category" widget="radio"/>
                 </field>
                 <notebook position="inside">
                     <page string="Sessions">
                         <field name="session_ids"/>
                     </page>
                 </notebook>
             </data>
         </field>
    </record>

    <record id="openacademy_res_partner_category_form" model="ir.ui.view">
        <field name="name">openacademy.res.partner.category.form</field>
        <field name="model">res.partner.category</field>
        <field name="inherit_id" ref="base.view_partner_category_form"/>
        <field name="priority" eval="50"/>
         <field name="arch" type="xml">
            <data>
                 <field name="active" position="after">
                     <field name="teacher_category" widget="radio"/>
                 </field>
             </data>
         </field>
    </record>
    </data>
</openerp>